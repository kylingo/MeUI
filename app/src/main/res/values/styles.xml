<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Root.Theme.AppTheme.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_layer</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Root.Theme.AppTheme.Light" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base.Theme.AppTheme.Light" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Root.Theme.AppTheme.Dark" parent="Theme.AppTheme.Dark">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Base.Theme.AppTheme.Dark" parent="Theme.AppTheme.Dark">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="stateSelector">@color/state_selector_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="accentColor">@color/accent</item>
        <item name="iconColor">@android:color/black</item>
        <item name="windowBackground">@color/window_background</item>
        <item name="fabCircleColor">@color/fabCircleColor_light</item>
    </style>

    <style name="Theme.AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="accentColor">@color/colorAccentDarkTheme</item>
        <item name="iconColor">@android:color/white</item>
        <item name="windowBackground">@color/window_background_dark</item>
        <item name="stateSelector">@color/state_selector_dark</item>
        <item name="fabCircleColor">@color/fabCircleColor_dark</item>
    </style>

    <style name="Theme.AppTheme.Light.ActionBar" parent="Theme.AppCompat.Light">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="stateSelector">@color/state_selector_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="accentColor">@color/accent</item>
        <item name="iconColor">@android:color/black</item>
        <item name="windowBackground">@color/window_background</item>
        <item name="fabCircleColor">@color/fabCircleColor_light</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.GsonView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- 横向进度条 -->
    <style name="WidgetProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:progressDrawable">@android:drawable/progress_horizontal</item>-->
        <item name="android:progressDrawable">@drawable/custom_progress_horizontal</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>
