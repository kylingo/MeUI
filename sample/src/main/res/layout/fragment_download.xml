<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_download_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_start"/>

    <Button
        android:id="@+id/btn_download_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_pause"/>

    <Button
        android:id="@+id/btn_download_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_delete"/>

    <TextView
        android:id="@+id/tv_download_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>